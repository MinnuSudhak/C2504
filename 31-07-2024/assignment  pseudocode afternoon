7.sum of numbers from 1 to 10

BEGIN
Initialize sum = 0 as integer
	FOR i<int> FROM 1 TO 10
        	sum = sum + i
    	END FOR
	print "The sum of the first 10 natural numbers is: " + sum
END
 
     




   
    






   
	
	
