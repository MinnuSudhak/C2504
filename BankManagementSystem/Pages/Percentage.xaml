<Window x:Class="BankManagementSystem.Pages.Percentage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BankManagementSystem.Pages"
        mc:Ignorable="d"
        Title="Percentage" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <TextBlock Text="Select Interest Percentage" Width="300" Height="30" Background="#9e0344" Foreground="yellow" TextAlignment="Center" HorizontalAlignment="Center" FontWeight="Bold"/>
            <RadioButton x:Name="A10per" Content="0%"  GroupName="InterestRate" Margin="15"/>
            <RadioButton x:Name="A5per" Content="5%"  GroupName="InterestRate" Margin="20"/>
            <RadioButton x:Name="B10per" Content="10%"   GroupName="InterestRate" Margin="20"/>
            <RadioButton x:Name="C15per" Content="15%"    GroupName="InterestRate" Margin="20"/>
            <Button Content="Show Accounts" Width="300" Height="30" Background="#9e0344" Foreground="yellow" FontWeight="Bold" />
        </StackPanel>
        <DataGrid x:Name="grdaccount" AutoGenerateColumns="True" Margin="10" VerticalAlignment="Bottom" Height="199" Width="750" HorizontalAlignment="Center"></DataGrid>
        
    </Grid>
</Window>
