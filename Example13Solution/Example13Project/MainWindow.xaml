<Window x:Class="Example13Project.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Example13Project"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Canvas>
        <Border Canvas.Left="364" Canvas.Top="61" BorderBrush="Black" BorderThickness="1" Padding="10" Background="AliceBlue"  CornerRadius="5">
            <TextBlock x:Name="lblCount" TextWrapping="Wrap" Height="50" Width="50" Text="0" TextAlignment="Center" RenderTransformOrigin="0.496,0.393" FontSize="22" />
        </Border>
        <Button x:Name="btnPlus" Canvas.Left="300" Canvas.Top="160" Width="80" Height="80" Content="+" FontSize="32" FontWeight="Bold" Click="btnPlus_Click"/>
