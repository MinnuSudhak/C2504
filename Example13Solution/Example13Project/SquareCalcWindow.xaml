<Window x:Class="Example13Project.SquareCalcWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Example13Project"
        mc:Ignorable="d"
        Title="SquareCalcWindow" Height="450" Width="800">
    <Grid>
        <TextBlock x:Name="lblNumber" HorizontalAlignment="Left" Margin="321,64,0,0" TextWrapping="Wrap" Text="Number" VerticalAlignment="Top"/>
        <TextBlock x:Name="lblResult" HorizontalAlignment="Left" Margin="321,104,0,0" TextWrapping="Wrap" Text="Result" VerticalAlignment="Top"/>
        <Button x:Name="btnSquare" Content="Square" HorizontalAlignment="Left" Margin="241,188,0,0" VerticalAlignment="Top" Height="29" Width="60" Click="btnSquare_Click"/>
        <Button x:Name="btnCube" Content="Cube" HorizontalAlignment="Left" Margin="408,188,0,0" VerticalAlignment="Top" Height="29" Width="60" RenderTransformOrigin="0.937,0.622" Click="btnCube_Click"/>
        <TextBox x:Name="txtNumber" HorizontalAlignment="Left" Margin="483,64,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="txtResult" HorizontalAlignment="Left" Margin="483,104,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>

    </Grid>
</Window>
